{
  "manifest_version": 2,
  "name": "X-Plane plugin manager",
  "version": "1.3.3",
  "description": "plugin manager",

  "browser_action": {
    "default_icon" : "icons/icon.png",
    "default_title": "yes",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "*://forums.x-plane.org/*"
  ],

  "content_scripts": [{
    "matches": ["http://*/*"],
    "css": ["popup/stylesheet.css"],
    "js": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "popup/script.js"
    ]
  }]
}